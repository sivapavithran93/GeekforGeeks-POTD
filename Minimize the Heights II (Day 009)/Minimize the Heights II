class Solution:
    def getMinDiff(self, arr,k):
        n = len(arr)
        arr.sort()
        ans = arr[n-1] - arr[0]
        for i in range(1, n):
            if arr[i] >= k:
                max_val = max(arr[i-1]+k, arr[n-1]-k)
                min_val = min(arr[0]+k, arr[i]-k)
                ans = min(ans, max_val - min_val)
            else:
                continue
        return ans
